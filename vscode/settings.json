{
  // WORKBENCH SETTINGS --------------------------------------------------------
  "workbench.iconTheme": "material-icon-theme",
  "workbench.settings.editor": "json",
  // GIT
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  // GITLENS.
  "gitlens.gitExplorer.files.layout": "auto",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.keymap": "alternate",
  "gitlens.advanced.messages": {
    "suppressShowKeyBindingsNotice": true
  },
  // FONT ----------------------------------------------------------------------
  "editor.fontFamily": "IBM Plex Mono, Menlo, Monaco, 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "IBM Plex Mono, Menlo, Monaco, 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.lineHeight": 23.2, // fontSize x 1.45
  "editor.fontWeight": "500",
  "editor.letterSpacing": 0.5,
  // TAB
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  // AUTO FORMAT
  "editor.formatOnSave": true,
  "window.zoomLevel": 1,
  "editor.hover.delay": 300,
  "editor.quickSuggestionsDelay": 0,
  "workbench.startupEditor": "newUntitledFile",
  "editor.cursorWidth": 4,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.trimAutoWhitespace": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "files.trimTrailingWhitespace": true,
  "typescript.experimental.syntaxFolding": false,
  "eslint.autoFixOnSave": true,
  "editor.minimap.enabled": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "update.enableWindowsBackgroundUpdates": false,
  "update.showReleaseNotes": false,
  "extensions.autoUpdate": false,
  "material-icon-theme.showUpdateMessage": false,
  "git.enableSmartCommit": true,
  "editor.rulers": [80, 120],
  "debug.console.fontFamily": "auto",
  "editor.codeLens": false,
  "workbench.editor.enablePreview": false,
  "editor.snippetSuggestions": "top",
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.statusBar.feedback.visible": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "macros": {
    "collapseAndClose": [
      "workbench.files.action.collapseExplorerFolders",
      "workbench.action.closeAllEditors"
    ]
  },
  "markdown.extension.syntax.decorations": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "workbench.colorTheme": "Night Owl No Italics"
}
